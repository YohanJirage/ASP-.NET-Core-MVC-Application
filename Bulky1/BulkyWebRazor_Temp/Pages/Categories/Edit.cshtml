@page
@model BulkyWebRazor_Temp.Pages.Categories.EditModel
@{
}

<form method="post">
    <input asp-for="Cat.Id" hidden />
    <div class=" border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Edit Category</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Cat.Name" class="p-1"> </label>
            <input asp-for="Cat.Name" type="text" class="form-control" />
            <span asp-validation-for="Cat.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Cat.DisplayOrder" class="p-1 "> </label>
            <input asp-for="Cat.DisplayOrder" type="number" class="form-control" />
            <span asp-validation-for="Cat.DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Edit</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-Page="/Categories/index"  class="btn btn-secondary form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
