@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel
@{
}


<form method="post">
    <input asp-for="Cat.Id" hidden />
    <div class=" border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Cat.Name" class="p-1"> </label>
            <input asp-for="Cat.Name" type="text" disabled class="form-control" />
             
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Cat.DisplayOrder" class="p-1 "> </label>
            <input asp-for="Cat.DisplayOrder" disabled type="number" class="form-control" />
           
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-Page="/Categories/index"  class="btn btn-secondary form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>

</form>
 
